  }
  .card {
    background-color: hsl(300, 24%, 96%);
    color: hsl(300, 43%, 22%);
  }
</style>

<div class={atributes}>
  <div class="stars flex justify-center gap-2">
    <img src="icon-star.svg" alt="star" class="w-6" />
    <img src="icon-star.svg" alt="star" class="w-6" />
    <img src="icon-star.svg" alt="star" class="w-6" />
    <img src="icon-star.svg" alt="star" class="w-6" />
    <img src="icon-star.svg" alt="star" class="w-6" />
  </div>
  <p>{paragraph}</p>
</div>

---
interface TopCard {
  paragraph: string;
  atributes: string;
}
const { paragraph, atributes } = Astro.props;
---

<style>
  body {
    /* background-color: hsl(300, 43%, 22%); */
    /* background-color: hsl(333, 80%, 67%); */
